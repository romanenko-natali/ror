<!DOCTYPE html>
<html>
  <head>
    <title>ProjectManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="container mt-3">
      <% if user_signed_in? %>
        <div class="d-flex justify-content-between align-items-center">
          <div class="d-flex">
            <%= link_to 'Edit profile', edit_user_registration_path, class: 'btn btn-primary btn-sm me-2' %>
            <%= form_tag(destroy_user_session_path, method: :delete) do %>
                <%= submit_tag "Log out", class: "btn btn-danger btn-sm" %>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="me-2">
          <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary' %>
          <%= link_to 'Log in', new_user_session_path, class: 'btn btn-outline-primary' %>
        </div>
      <% end %>

      <nav class="navigation" style="margin-top:20px">
        <%= link_to 'Home', root_path, class: 'nav-link' %>
        <%= link_to 'Projects', projects_path, class: 'nav-link' %>
        <%= link_to 'Profile', edit_user_registration_path, class: 'nav-link' %>
      </nav>

      <%= yield %>
    </div>
  </body>
</html>