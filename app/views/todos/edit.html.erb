<head>
  <%= stylesheet_link_tag 'todos', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag 'headline', media: 'all' %>
</head>

<div class="header-container">
  <h1 class="project-heading"><%= @todo.title %></h1>
  <div class="header-links">
    <%= link_to "Projects", projects_path %>
    <%= link_to "Tasks", todos_path %>
    <%= link_to "Account", user_path(current_user) %>
    <%= link_to 'Logout', logout_path, data: { confirm: 'Are you sure you want to logout?' } %>
  </div>
</div>  

<div class="todo-info-container">
  <%= form_with(model: @todo, url: todo_path(@todo), method: :patch) do |form| %>
    <div class="field">
      <%= form.label :title, class: "label-large" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :description, class: "label-large" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="buttons-container">
      <%= form.submit "Update Task", class: "button" %>  
      <%= link_to "Cancel", todo_path(@todo), class: "button" %>
    </div>
  <% end %>   
</div>
