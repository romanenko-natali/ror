<head>
  <%= stylesheet_link_tag 'headline', media: 'all' %>
  <%= stylesheet_link_tag 'user', media: 'all' %>
</head>

<div class="header-container">
  <h1 class="project-heading">My account</h1>
  <div class="header-links">
    <%= link_to "Projects", projects_path %>
    <%= link_to "Tasks", todos_path %>
    <%= link_to 'Logout', logout_path, data: { confirm: 'Are you sure you want to logout?' } %>
  </div>
</div>   

<div class="user-info-container">
  <h2>User Information</h2>
  <h5><strong>Name:</strong> <%= @user.name %></h5>
  <h5><strong>Email:</strong> <%= @user.email %></h5>
  <%= link_to 'Edit Account', edit_user_path(@user), class: 'button' %>
</div>