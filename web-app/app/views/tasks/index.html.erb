<h1>Tasks</h1>

<%= link_to "New Task", new_project_task_path(@project), class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= link_to "Show", project_task_path(@project, task), class: "btn btn-info" %></td>
        <td><%= link_to "Edit", edit_project_task_path(@project, task), class: "btn btn-warning" %></td>
        <td><%= link_to "Destroy", project_task_path(@project, task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
