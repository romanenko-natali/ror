<!-- app/views/tasks/index.html.erb -->
<h1>Tasks for <%= @project.title %></h1>
<%= link_to 'New Task', new_project_task_path(@project), class: 'btn btn-primary' %>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, project_task_path(@project, task) %>
      <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-secondary' %>
      <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </li>
  <% end %>
</ul>

