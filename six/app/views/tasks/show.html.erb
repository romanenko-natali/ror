<h1><%= @task.title %></h1>
<p><%= @task.description %></p>
<%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-secondary' %>
<%= link_to 'Back to Project', project_tasks_path(@task.project), class: 'btn btn-primary' %>

<h2>Comments</h2>
<%= render partial: 'comments/form', locals: { commentable: @task } %>
<%= render partial: 'comments/show', locals: { comments: @task.comments } %>
